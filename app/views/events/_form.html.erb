<%= form_for (@event), :html => {:id => "event_form"} do |f|  %>
    <div><b><font size="3px">Title</font></b><br/>
     <%= f.text_field :title %></div> <div id='em_title'> </div> <br/> 

    <div><b><font size="3px">Select Type Of Event:</font></b><br/>
      <%= collection_select(:event, :category_id, Category.all, :id, :name, {:include_blank => 'None'}) %>
      
    </div><div id='em_activities'> </div>
      <%= link_to "Other Category", other_category_events_path(), {:remote => true, :id => "other_category", :method => :post} %>
    <br/><br/>
      <div id="tempcat"> </div>
    <div><b><font size="3px">Description</font></b><br/>
      <%= f.text_area :description , :rows => 5 %></div> <div id='em_description'> </div><br/>

    <div><b><font size="3px">Add Activities</font></b><br/>
      <%= select_tag "activities", options_for_select(@activities.collect{|activity| [activity.title, activity.id]}, @event.activities.collect{|e| e.id}),{:multiple => true, :prompt => 'None'} %></div><div id='em_activities'> </div>

    <%= link_to "Other Activity", other_activity_events_path(), {:remote => true, :id => "other_activity", :method => :post} %>
<br/><br/>
    <div id="tempact"> </div>

    <div><b><font size="3px">Start Date </font></b><br/>
      <%= f.text_field :start_date, :readonly => true%></div><div id='em_start_date'> </div><br/>

    <div><b><font size="3px">End Date </font></b><br/>
      <%= f.text_field :end_date, :readonly => true %></div><div id='em_end_date'> </div><br/>

    <div style="height: 20px">
    </div>

    <div class="actions" ><%= f.submit%>
    </div>
    
<%end%>
