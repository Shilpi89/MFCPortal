<%= form_for (@category) do |f| %>
    <div><b><font size="3px">Type</font></b><br/>
     <%= f.text_field :name %></div><div id='em_category_name' class = "errors"> </div><br/>

    <div><b><font size="3px">Description</font></b><br/>
      <%= f.text_area :description, :rows => 5 %></div><div id='em_category_description' class = "errors"> </div><br/>

    <div style="height: 20px">
    </div>

  <div class="actions" id = "category_form_submit"><%= f.submit%>
    </div>

  <%end%>
