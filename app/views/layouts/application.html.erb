<html>
<head>
  <title>M.F.C</title>
  
  <%= stylesheet_link_tag "application","jquery-ui-1.8.21.custom","style", "colorbox", "flexslider", :media => "all" %>
  <%= javascript_include_tag "application","customize_MFC","jquery-ui-1.8.21.custom.min", "image_fade", "jquery.easing-sooper", "jquery.sooperfish", "modernizr-1.5.min", "jquery.colorbox", "jquery.flexslider", "validations_MFC.js"%>
  <%= csrf_meta_tags %>
</head>

<body>
  <p class="alert" id="devise_alert"><%= alert %></p>
  <p class="notice" id="devise_notice"><%= notice %></p>

<% if user_signed_in? %>
  <%= render 'shared/header' %>
  <%end%>
<% if user_signed_in? %>
  <div class="well span2" style="min-height: 500px">
  
  <ul class="nav nav-pills nav-stacked">
    <li class="active">
    <%= link_to 'Home', welcome_events_path %>
    </li>
    
    <li><%= link_to 'Events', events_path %></li>
    
    <% if current_user.role.downcase == 'admin'%>
    <li><%= link_to 'Manage Activites', activities_path %></li>
    <%end%>

    <% if current_user.role.downcase == 'admin'%>
    <li><%= link_to 'Manage Event Categories', categories_path %></li>
    <%end%>
  </ul>

  </div>
<%end %>
  <%= yield %>  
</body>

</html>
